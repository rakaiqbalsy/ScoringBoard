<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="camp.bso.inf.scoringboard.DetailPersib"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="LINE UP PERSIB BANDUNG"
            android:background="#1b67e2"
            android:textColor="#fff"
            android:textSize="30sp"
            android:gravity="center_horizontal"
            />

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="300dp"
            android:layout_weight="1"
            android:src="@drawable/persiblineup"
            />
    </LinearLayout>

    <RelativeLayout
        android:id="@+id/detailspersiblineup"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <Button
            android:id="@+id/webpersib"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="PERSIB OFFICIAL" />

        <Button
            android:id="@+id/bolapersib"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_marginLeft="30dp"
            android:layout_marginStart="30dp"
            android:layout_toEndOf="@+id/webpersib"
            android:layout_toRightOf="@+id/webpersib"
            android:text="Bola.com" />

        <Button
            android:id="@+id/grahapersib"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_marginLeft="25dp"
            android:layout_marginStart="25dp"
            android:layout_toEndOf="@+id/bolapersib"
            android:layout_toRightOf="@+id/bolapersib"
            android:text="Alamat" />

    </RelativeLayout>

   <RelativeLayout
       android:layout_width="match_parent"
       android:layout_height="wrap_content">
    <Button
        android:id="@+id/gbla"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:text="Stadion" />
   </RelativeLayout>

</LinearLayout>

